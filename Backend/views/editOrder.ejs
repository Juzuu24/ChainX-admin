<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('component/head') %>
  <title>Edit Order Setting</title>
  <style>
    .form-container {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      max-width: 600px;
      margin: 0 auto;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: #333;
    }
    
    .form-control {
      width: 100%;
      padding: 12px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 16px;
      transition: border-color 0.3s ease;
    }
    
    .form-control:focus {
      outline: none;
      border-color: #0F3DDE;
      box-shadow: 0 0 0 3px rgba(15, 61, 222, 0.1);
    }
    
    .form-select {
      width: 100%;
      padding: 12px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 16px;
      background-color: white;
      transition: border-color 0.3s ease;
    }
    
    .form-select:focus {
      outline: none;
      border-color: #0F3DDE;
      box-shadow: 0 0 0 3px rgba(15, 61, 222, 0.1);
    }
    
    .btn-primary {
      background-color: #0F3DDE;
      color: white;
      padding: 12px 30px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    
    .btn-primary:hover {
      background-color: #0a2bb3;
    }
    
    .btn-secondary {
      background-color: #6c757d;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 8px;
      text-decoration: none;
      display: inline-block;
      margin-top: 15px;
      transition: background-color 0.3s ease;
    }
    
    .btn-secondary:hover {
      background-color: #5a6268;
      text-decoration: none;
      color: white;
    }
    
    .form-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 30px;
    }
    
    .page-header {
      text-align: center;
      margin-bottom: 30px;
    }
    
    .page-header h2 {
      color: #0F3DDE;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <%- include('component/nav') %>

  <!-- Mobile Navbar -->
  <div class="mobile-navbar">
    <span class="menu-toggle" onclick="toggleSidebar()">â˜° MENU</span>
  </div>

  <!-- Sidebar -->
  <%- include('component/sidebar') %>

  <!-- Main Content -->
  <div class="content">
    <div class="container-fluid">
      <div class="page-header">
        <h2>Edit Order Setting</h2>
        <p class="text-muted">Update user order preferences and limits</p>
      </div>
      
      <div class="form-container">
        <form method="POST" action="/order/edit/<%= order.id %>">
          <div class="form-group">
            <label class="form-label">User:</label>
            <select name="user_id" class="form-select" required>
              <% users.forEach(user => { %>
                <option value="<%= user.id %>" <%= order.user_id == user.id ? 'selected' : '' %>>
                  <%= user.username %> (ID: <%= user.id %>)
                </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label class="form-label">Order Number:</label>
            <input 
              type="number" 
              name="order_number" 
              class="form-control" 
              value="<%= order.order_number %>" 
              required
              min="1"
              step="1"
              placeholder="Enter order number"
            >
          </div>

          <div class="form-group">
            <label class="form-label">Is Claimed?</label>
            <select name="is_claimed" class="form-select" required>
              <option value="0" <%= order.is_claimed == 0 ? 'selected' : '' %>>No</option>
              <option value="1" <%= order.is_claimed == 1 ? 'selected' : '' %>>Yes</option>
            </select>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-primary">
              <i class="fas fa-save"></i> Update Lucky Order
            </button>
            <a href="/order" class="btn-secondary">
              <i class="fas fa-arrow-left"></i> Back to Orders
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    // Sidebar Toggle Function
    function toggleSidebar() {
      var sidebar = document.getElementById("sidebar");
      sidebar.classList.toggle("active");
    }

    
  </script>
</body>
</html>