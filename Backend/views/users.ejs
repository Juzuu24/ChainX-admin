<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('component/head') %>
  <title><%= title %></title>
</head>
<body>

  <!-- Navbar -->
  <%- include('component/nav') %>

  <!-- Mobile Navbar -->
  <div class="mobile-navbar">
    <span class="menu-toggle" onclick="toggleSidebar()">â˜° MENU</span>
  </div>

  <!-- Sidebar -->
  <%- include('component/sidebar') %>

  <!-- Main Content -->
  <div class="content">
    <div class="container-fluid">
      <div class="page-header">
        <h2>User List</h2>
        <a href="/users/add" class="btn btn-primary">Add New User</a>
      </div>
      
      <div class="table-container">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Balance</th>
                <th>Password</th>
                <th>VIP Status</th>
                <th>Credit Score</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (users && users.length > 0) { %>
                <% users.forEach(user => { %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.phone_number %></td>
                    <td><%= user.email %></td>
                    <td>$<%= user.balance %></td>
                    <td>$<%= user.password_hash %></td>
                    <td><%= user.vip_status %></td>
                    <td><%= user.credit_score %></td>
                    <td>
                      <div class="btn-group">
                        <a href="/users/edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/users/delete/<%= user.id %>" 
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center py-4">No users found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Sidebar Toggle Function
    function toggleSidebar() {
      var sidebar = document.getElementById("sidebar");
      sidebar.classList.toggle("active");
    }

   
  
  </script>
</body>
</html>