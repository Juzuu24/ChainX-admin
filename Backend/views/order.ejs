<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('component/head') %>
  <title>Order Settings</title>
</head>
<body>

  <!-- Navbar -->
  <%- include('component/nav') %>

  <!-- Mobile Navbar -->
  <div class="mobile-navbar">
    <span class="menu-toggle" onclick="toggleSidebar()">☰ MENU</span>
  </div>

  <!-- Sidebar -->
  <%- include('component/sidebar') %>

  <!-- Main Content -->
  <div class="content">
    <div class="container-fluid">
      <div class="page-header">
        <h2>Order Settings</h2>
        <a href="/order/add" class="btn btn-primary">➕ Add New Setting</a>
      </div>
      
      <div class="table-container">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>User</th>
                <th>Order Number</th>
                <th>Claimed</th>
                <th>Created At</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (orders && orders.length > 0) { %>
                <% orders.forEach(order => { %>
                  <tr>
                    <td><%= order.id %></td>
                    <td><%= order.username %></td>
                    <td><%= order.order_number %></td>
                    <td><%= order.is_claimed ? 'Yes' : 'No' %></td>
                    <td><%= (order.created_at instanceof Date) ? order.created_at.toISOString().slice(0,19).replace('T',' ') : order.created_at %></td>
                    <td>
                      <div class="btn-group">
                        <a href="/order/edit/<%= order.id %>" class="btn btn-sm btn-warning">✏️ Edit</a>
                        <form method="POST" action="/order/delete/<%= order.id %>" style="display:inline;">
                          <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this order?')">
                            Delete
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center py-4">No orders found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Sidebar Toggle Function
    function toggleSidebar() {
      var sidebar = document.getElementById("sidebar");
      sidebar.classList.toggle("active");
    }

    
    
  </script>
</body>
</html>